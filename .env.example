# Django Configuration
SECRET_KEY=your-secret-key-here
DEBUG=True

# Database Configuration (SQLite by default)
DATABASE_URL=sqlite:///db.sqlite3

# Email Configuration (for OTP)
# Choose between 'sendgrid', 'smtp', or 'console' for email backend
EMAIL_BACKEND=sendgrid
SENDGRID_API_KEY=your-sendgrid-api-key-here
DEFAULT_FROM_EMAIL=your-email@example.com
FROM_NAME=Travel Partner Platform

# SMTP Configuration (fallback if not using SendGrid)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Twilio Configuration (for SMS OTP)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number

# Feature Flags
MOBILE_OTP_ENABLED=False  # Set to True to enable mobile OTP

# OpenAI Configuration (for enhanced tour scraping)
OPENAI_API_KEY=your-openai-api-key-here
